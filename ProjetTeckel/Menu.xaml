<Window
    x:Class="ProjetTeckel.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ProjetTeckel"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Menu"
    Width="500"
    Height="300"
    mc:Ignorable="d">
    <Grid>
        <Rectangle x:Name="rMenu" Stroke="#FFD97733" />

        <Button
            x:Name="Jouer"
            Width="150"
            Height="52"
            Margin="28,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="#FF60F762"
            Click="Jouer_Click"
            Content="Jouer" />
        <Button
            x:Name="Annuler"
            Width="150"
            Height="52"
            Margin="304,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Background="#FFDA4435"
            Click="Annuler_Click"
            Content="Annuler"
            RenderTransformOrigin="0.972,0.278" />
        <TextBlock
            Width="40"
            Height="17"
            Margin="0,33,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="Black"
            Foreground="#FFDF9361"
            TextWrapping="Wrap"><Run Language="fr-fr" Text="TECKEL" /></TextBlock>

    </Grid>
</Window>
