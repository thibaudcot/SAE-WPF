<Window x:Name="PrjTeckel" x:Class="ProjetTeckel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjetTeckel"
        mc:Ignorable="d"
        Title="MainWindow" Height="465" Width="465">
    <Grid Margin="10,26,95,27">
        <Canvas x:Name="Canvas" Background="Green">
            <Grid x:Name="Grid" Height="396" Width="360" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25*"/>
                    <ColumnDefinition Width="25"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                    <RowDefinition Height="25*"/>
                </Grid.RowDefinitions>
                <Rectangle x:Name="teckel" Fill="#FFF4F4F5" HorizontalAlignment="Center" Stroke="Black" Width="25" RenderTransformOrigin="-0.118,-0.168" Height="25" Grid.Column="1" Grid.Row="1" KeyDown="teckel_ToucheBas" KeyUp="teckel_ToucheHaut"/>
            </Grid>
        </Canvas>
        <TextBlock x:Name="score" HorizontalAlignment="Left" Margin="375,0,0,0" TextWrapping="Wrap" Text="Score :" VerticalAlignment="Top" Width="61" Height="45"/>

    </Grid>
</Window>
